{
  "expo": {
    "name": "DessertDive",
    "slug": "dessertdive",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.dessertdive",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to find nearby dessert places."
      }
    },
    "android": {
      "package": "com.yourcompany.dessertdive",
      "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
